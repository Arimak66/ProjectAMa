<Window x:Class="ProjectAMa.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAMa"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TeacherWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="CloseWindow" Content="Close window and exit" HorizontalAlignment="Left" Height="52" Margin="603,345,0,0" VerticalAlignment="Top" Width="165" Click="CloseWindow_Click"/>
        <Button x:Name="ChangePassword" Content="Change Password" HorizontalAlignment="Left" Margin="603,273,0,0" VerticalAlignment="Top" Height="44" Width="165" Click="ChangePassword_Click"/>
        <Button x:Name="CreateNewCourse" Content="Create new course" HorizontalAlignment="Left" Height="46" Margin="603,210,0,0" VerticalAlignment="Top" Width="165" Click="Button_Click"/>

    </Grid>
</Window>
