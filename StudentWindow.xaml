<Window x:Class="ProjectAMa.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAMa"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="StudentWindow" Height="450" Width="800" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="365*"/>
        </Grid.RowDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Height="46" Margin="50,45,0,0" Grid.Row="1" VerticalAlignment="Top" Width="132" Click="Button_Click"/>
        <TextBox Name="welcomeText" HorizontalAlignment="Left" Height="31" Margin="36,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" Text="{Binding Firstname; Lastname}"/>
        <Button x:Name="CloseWindow" Content="Close window and exit" HorizontalAlignment="Left" Height="57" Margin="584,283,0,0" Grid.Row="1" VerticalAlignment="Top" Width="194" Click="CloseWindow_Click"/>
        <Button x:Name="ChangePassword" Content="Change password" HorizontalAlignment="Left" Height="49" Margin="584,217,0,0" Grid.Row="1" VerticalAlignment="Top" Width="194" Click="ChangePassword_Click"/>

    </Grid>
</Window>
