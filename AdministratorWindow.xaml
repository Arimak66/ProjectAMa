<Window x:Class="ProjectAMa.AdministratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAMa"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        Title="AdministratorWindow" Height="450" Width="800" Background="lightBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="152*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="257*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="137*"/>
        </Grid.RowDefinitions>
        <Button x:Name="AddNewUser" Grid.Column="4" Content="Add a new user" HorizontalAlignment="Center" Height="50" Margin="0,20,0,0" VerticalAlignment="Top" Width="149" Grid.Row="1" Click="AddNewUser_Click"/>
        <Button x:Name="CloseThisWindow" Grid.Column="4" Content="Close this window and exit" HorizontalAlignment="Center" Margin="0,56,0,0" Grid.Row="3" VerticalAlignment="Top" Height="45" Width="149" Click="CloseThisWindow_Click"/>
        <Button x:Name="ChangePassword" Grid.Column="4" Content="Change password" HorizontalAlignment="Center" Margin="0,70,0,0" Grid.Row="2" VerticalAlignment="Top" Height="54" Grid.RowSpan="2" Width="149" Click="ChangePassword_Click"/>
        <Button x:Name="CreateNewCourse" Grid.Column="4" Content="Create new course" HorizontalAlignment="Center" Margin="0,91,0,0" Grid.Row="1" VerticalAlignment="Top" Height="54" Grid.RowSpan="2" Width="149" Click="CreateNewCourse_Click"/>
        <Label Content="List of users:" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="26" Margin="38,27,0,0" VerticalAlignment="Top" Width="137"/>
        <ListView x:Name="UserLIst" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="324" Margin="38,58,0,0" Grid.RowSpan="4" VerticalAlignment="Top" Width="215" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="ListAllUsers" Grid.Column="2" Content="List all users" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="34" Margin="24,79,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="140" Click="ListAllUsers_Click"/>
        <Button x:Name="ListAllStudents" Grid.Column="2" Content="List all students" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="34" Margin="24,45,0,0" VerticalAlignment="Top" Width="140" Grid.Row="1" Click="ListAllStudents_Click"/>
        <Button x:Name="ListAllTeachers" Grid.Column="2" Content="List all teachers" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="34" Margin="24,1,0,0" VerticalAlignment="Top" Width="140" Grid.Row="2" Click="ListAllTeachers_Click"/>
        <Button x:Name="ListAllAdministrators" Grid.Column="2" Content="List all administrators" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="34" Margin="24,63,0,0" VerticalAlignment="Top" Width="140" Grid.Row="2" Click="ListAllAdministrators_Click"/>

    </Grid>
</Window>
