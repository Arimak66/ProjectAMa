<Window x:Class="ProjectAMa.AdministratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAMa"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        Title="AdministratorWindow" Height="450" Width="800" Background="lightBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="152*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="138*"/>
            <ColumnDefinition Width="270*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="137*"/>
        </Grid.RowDefinitions>
        <Button x:Name="AddNewUser" Grid.Column="4" Content="Add a new user" HorizontalAlignment="Left" Height="36" Margin="36,52,0,0" VerticalAlignment="Top" Width="133" Click="AddNewUser_Click"/>
        <Button x:Name="CloseThisWindow" Grid.Column="4" Content="Close this window and exit" HorizontalAlignment="Center" Margin="0,56,0,0" Grid.Row="3" VerticalAlignment="Top" Height="45" Width="148" Click="CloseThisWindow_Click"/>
        <Button x:Name="ChangePassword" Grid.Column="4" Content="Change password" HorizontalAlignment="Left" Margin="36,66,0,0" Grid.Row="1" VerticalAlignment="Top" Height="34" Width="133" Click="ChangePassword_Click"/>
        <Button x:Name="CreateNewCourse" Grid.Column="4" Content="Create new course" HorizontalAlignment="Left" Margin="36,16,0,0" Grid.Row="1" VerticalAlignment="Top" Height="35" Width="133" Click="CreateNewCourse_Click"/>
        <Label Content="List of users:" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="26" Margin="38,19,0,0" VerticalAlignment="Top" Width="137"/>
        <ListView x:Name="UserList" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="330" Margin="38,52,0,0" Grid.RowSpan="4" VerticalAlignment="Top" Width="328" ItemsSource="{Binding Path=Users}" IsSynchronizedWithCurrentItem="False">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="80" Header="Username" DisplayMemberBinding="{Binding Path=Username}"/>
                    <GridViewColumn Width="120" Header="Firstname"  DisplayMemberBinding="{Binding Path=Firstname}"/>
                    <GridViewColumn Width="120" Header="Lastname"  DisplayMemberBinding="{Binding Path=Lastname}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="ListAllUsers" Grid.Column="3" Content="List all users" HorizontalAlignment="Center" Height="34" Margin="0,52,0,0" VerticalAlignment="Top" Width="140" Click="ListAllUsers_Click"/>
        <Button x:Name="ListAllStudents" Grid.Column="3" Content="List all students" HorizontalAlignment="Center" Height="34" Margin="0,16,0,0" VerticalAlignment="Top" Width="140" Grid.Row="1" Click="ListAllStudents_Click"/>
        <Button x:Name="ListAllTeachers" Grid.Column="3" Content="List all teachers" HorizontalAlignment="Center" Height="34" Margin="0,66,0,0" VerticalAlignment="Top" Width="140" Grid.Row="1" Click="ListAllTeachers_Click"/>
        <Button x:Name="ListAllAdministrators" Grid.Column="3" Content="List all administrators" HorizontalAlignment="Center" Height="34" Margin="0,23,0,0" VerticalAlignment="Top" Width="140" Grid.Row="2" Click="ListAllAdministrators_Click"/>
        <Button x:Name="SelectUser" Grid.Column="3" Content="Select user" HorizontalAlignment="Left" Height="36" Margin="0,74,0,0" VerticalAlignment="Top" Width="84" Click="SelectUser_Click" RenderTransformOrigin="0.577,0.397" Grid.RowSpan="2" Grid.Row="2"/>

    </Grid>
</Window>
